    "@tsconfig/node18": "^2.0.1",
    "@types/node": "^18.16.14",
    "eslint": "^8.41.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --config nodemon.json src/index.ts",
