{
  "name": "typescript-template",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:MaanuVazquez/typescript-template.git",
  "author": "Emmanuel Vazquez <maanuvazquez@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14.17.0 <15"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/node": "^14.15.5",
    "dotenv": "^10.0.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "ts-node": "^10.4.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --config nodemon.json src/index.ts",
    "start": "node -r dotenv/config -r ./tsconfig-paths-bootstrap.js ./dist/index.js",
    "lint": "yarn lint-eslint && yarn lint-typescript",
    "lint-eslint": "eslint --max-warnings 0 --ext ts ./src",
    "lint-typescript": "tsc --noEmit",
    "prepare": "husky install"
  }
}
