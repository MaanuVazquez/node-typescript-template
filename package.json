  "license": "MIT",
  "dependencies": {
    "dotenv": "^10.0.0",
    "tsconfig-paths": "^3.14.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@maanu-devtools/eslint-config-node": "^0.1.0",
    "@maanu-devtools/prettier-config": "^0.1.0",
